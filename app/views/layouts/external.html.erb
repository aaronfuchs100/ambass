<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag    "external" %>
  <!--[if IE 7 ]>
  <%= stylesheet_link_tag    "ie7" %>
  <![endif]-->
  <!--[if IE 8 ]>
  <%= stylesheet_link_tag    "ie8" %>
  <![endif]-->
  <link href='https://fonts.googleapis.com/css?family=Rokkitt' rel='stylesheet' type='text/css'>
  <%= javascript_include_tag "application" %>

  <%= csrf_meta_tags %>
  <%= yield :head %>
  <title>Prodigy Finance</title>
</head>
<body>

  <div class="wrapper">
    <div id = "header" class = "clearfix">
      <%= render :partial => "layouts/external/nav" %>
    </div>
    <div class = "clearfix">
    	<%= yield :extra %>
    </div>
    <div id = "main">
    	<div class = "container_12">
    		<div id = "flash-notice" class = "grid_12 alpha omega">
    			<% if flash.present? %>
    				<%= render :partial => "flash", :locals => {:flash => flash} %>
    			<% end %>
    		</div>
                <%= yield %>
    	</div>
    </div>
  </div>
  <div id="footer" class="<%= action_name %>">
    <%= render :partial => "layouts/external/footer" %>
  </div>

  <script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-2888340-2']);
  _gaq.push(['_setDomainName', 'prodigyfinance.com']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();
  </script>

</body>
</html>

